<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Login Page"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:id="@+id/header"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:text="Enter your Student Email"
        android:id="@+id/txt1"
        android:layout_marginTop="80dp"
        android:textSize="16dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/StudentEmail"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/custome_input"
        android:minWidth="245dp"
        android:hint="Student Email  :"
        android:padding="10dp"
        android:id="@+id/StudentEmail"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StudentEmail"
        android:text="Enter your Student Email"
        android:id="@+id/txt2"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/StudentEmail"
        android:textColor="@color/white"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/custome_input"
        android:minWidth="245dp"
        android:hint="Student Password :"
        android:padding="10dp"
        android:id="@+id/studentPassword"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentPassword"
        android:textSize="18dp"
        android:id="@+id/txtFgPassword"
        android:textColor="@color/white"
        android:clickable="true"
        android:layout_alignEnd="@+id/studentPassword"
        android:text="Forgot Password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custombtn"
        android:layout_marginTop="25dp"
        android:layout_below="@id/txtFgPassword"
        android:layout_centerHorizontal="true"
        android:padding="1dp"
        android:id="@+id/submitbtn"
        android:minWidth="240dp"
        android:text="Submit"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitbtn"
        android:layout_centerHorizontal="true"
        android:text="Do not Have And Account??"
        android:textSize="15dp"
        android:id="@id/txt3"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt3"
        android:textSize="16dp"
        android:text="Register.."
        android:textColor="#EA0404"
        android:textStyle="bold"
        android:layout_below="@id/txt3"
        android:id="@+id/forgotPassword"
        android:clickable="true"
        android:layout_marginStart="16dp"/>

</RelativeLayout>